<VBox alignment="CENTER" prefHeight="800" prefWidth="650" spacing="20" style="-fx-background-color: #191919; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.projeto_poo.view.EstatisticasViewController">

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1A8C88;" text="Estatísticas do Jogador" />
   <VBox prefHeight="204.0" prefWidth="366.0" style="-fx-padding: 50px; -fx-background-color: #FFFFFF; -fx-background-radius: 25px;">
      <children>
      
                            <Label style="-fx-text-fill: black;" text="Maior Sequência de Acertos: " />
          <Label fx:id="lblMaiorSequenciaAcertos" style="-fx-text-fill: black;" />
      
                            <Label style="-fx-text-fill: black;" text="Assunto com Maior Acerto: " />
          <Label fx:id="lblAssuntoMaiorAcerto" style="-fx-text-fill: black;" />
      
                            <Label style="-fx-text-fill: black;" text="Assunto com Menor Acerto: " />
          <Label fx:id="lblAssuntoMenorAcerto" style="-fx-text-fill: black;" />
      
                            <Label style="-fx-text-fill: black;" text="Maior Pontuação: " />
          <Label fx:id="lblMaiorPontuacao" style="-fx-text-fill: black;" />
      
                            <Label style="-fx-text-fill: black;" text="Total de Acertos: " />
          <Label fx:id="lblTotalAcertos" style="-fx-text-fill: black;" />
      
                            <Label style="-fx-text-fill: black;" text="Total de Erros: " />
          <Label fx:id="lblTotalErros" style="-fx-text-fill: white;" />
      </children>
   </VBox>

    <Button onAction="#voltarMenu" style="-fx-background-color: #1A8C88; -fx-text-fill: white; -fx-font-size: 16px;" text="Voltar ao Menu" />
</VBox>
