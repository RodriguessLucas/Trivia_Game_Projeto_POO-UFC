<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" prefWidth="650" prefHeight="800" style="-fx-background-color: #191919; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.projeto_poo.view.EstatisticasViewController">

    <Label text="Estatísticas do Jogador" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #00b894;" />

    <Label text="Maior Sequência de Acertos: " style="-fx-text-fill: white;" />
    <Label fx:id="lblMaiorSequenciaAcertos" style="-fx-text-fill: white;" />

    <Label text="Assunto com Maior Acerto: " style="-fx-text-fill: white;" />
    <Label fx:id="lblAssuntoMaiorAcerto" style="-fx-text-fill: white;" />

    <Label text="Assunto com Menor Acerto: " style="-fx-text-fill: white;" />
    <Label fx:id="lblAssuntoMenorAcerto" style="-fx-text-fill: white;" />

    <Label text="Maior Pontuação: " style="-fx-text-fill: white;" />
    <Label fx:id="lblMaiorPontuacao" style="-fx-text-fill: white;" />

    <Label text="Total de Acertos: " style="-fx-text-fill: white;" />
    <Label fx:id="lblTotalAcertos" style="-fx-text-fill: white;" />

    <Label text="Total de Erros: " style="-fx-text-fill: white;" />
    <Label fx:id="lblTotalErros" style="-fx-text-fill: white;" />

    <Button text="Voltar ao Menu" onAction="#voltarMenu" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-size: 16px;" />
</VBox>
