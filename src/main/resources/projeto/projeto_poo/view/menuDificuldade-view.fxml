<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@style/menuDificuldade-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.projeto_poo.controller.MenuDificuldadeController">

   <!-- Header Arredondado -->
   <StackPane layoutX="0" layoutY="0" prefHeight="150" styleClass="header" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
   </StackPane>

   <!-- Título Centralizado -->
   <Label alignment="CENTER" contentDisplay="CENTER" layoutX="368.0" layoutY="164.0" styleClass="title" text="Quizzes" />

   <!-- Container dos Quizzes -->
   <VBox alignment="CENTER" layoutX="100" layoutY="200" prefWidth="600" spacing="15" styleClass="quiz-container">
      <HBox alignment="CENTER_LEFT" spacing="10" styleClass="quiz-item">
         <ImageView fx:id="pythonImage" fitHeight="40" fitWidth="40" />
         <Label styleClass="quiz-title" text="Python - Básico" />
         <VBox alignment="CENTER_RIGHT">
            <Label styleClass="quiz-info" text="Fácil" />
            <Label styleClass="quiz-info" text="10 questões" />
         </VBox>
         <Button styleClass="quiz-play-button" text="▶">▶</Button>
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="10" styleClass="quiz-item">
         <ImageView fx:id="javaImage" fitHeight="40" fitWidth="40" />
         <Label styleClass="quiz-title" text="Java - Básico" />
         <VBox alignment="CENTER_RIGHT">
            <Label styleClass="quiz-info" text="Fácil" />
            <Label styleClass="quiz-info" text="10 questões" />
         </VBox>
         <Button styleClass="quiz-play-button">▶</Button>
      </HBox>

      <HBox alignment="CENTER_LEFT" spacing="10" styleClass="quiz-item">
         <ImageView fx:id="algorithmsImage" fitHeight="40" fitWidth="40" />
         <Label styleClass="quiz-title" text="Algoritmos - Básico" />
         <VBox alignment="CENTER_RIGHT">
            <Label styleClass="quiz-info" text="Fácil" />
            <Label styleClass="quiz-info" text="10 questões" />
         </VBox>
         <Button styleClass="quiz-play-button">▶</Button>
      </HBox>
   </VBox>

   <!-- Barra de Navegação Inferior -->
   <HBox alignment="CENTER" layoutY="530" prefWidth="800" spacing="40" styleClass="bottom-nav">
      <Button styleClass="nav-button"><ImageView fx:id="homeImage" fitHeight="40" fitWidth="40" /></Button>
      <Button styleClass="nav-button"><ImageView fx:id="playImage" fitHeight="40" fitWidth="40" /></Button>
      <Button styleClass="nav-button"><ImageView fx:id="statsImage" fitHeight="40" fitWidth="40" /></Button>
      <Button styleClass="nav-button"><ImageView fx:id="settingsImage" fitHeight="40" fitWidth="40" /></Button>

   </HBox>

</AnchorPane>
