<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Region?>

<VBox stylesheets="@style/application-view.css" prefHeight="800.0" prefWidth="400.0"
      spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="projeto.projeto_poo.controller.AppTelaInicialController"
      style="-fx-background-color: #2E7D79; -fx-padding: 40px;">

   <!-- Label do Nome, Alinhado à Esquerda -->
   <Label fx:id="txtInstrucao" text="Digite seu nome:" styleClass="title-label" alignment="BASELINE_LEFT" maxWidth="Infinity"/>

   <!-- Campo de Entrada -->
   <TextField fx:id="entradaNomeJogador" promptText="Ex: S'chn T'gai Spock" styleClass="input-field" maxWidth="-Infinity"/>

   <!-- Mensagem Informativa -->
   <Label fx:id="lblInformacao" text="Caso não digite o nome, será atribuído 'Jogador'" styleClass="info-label" maxWidth="-Infinity"/>

   <!-- Espaço para empurrar o botão para baixo -->
   <Region VBox.vgrow="ALWAYS" />

   <!-- Botão Iniciar no Fim da Tela -->
   <Button fx:id="btnIniciar" text="Iniciar" styleClass="start-button" onAction="#iniciarEntradaJogador"/>
</VBox>
