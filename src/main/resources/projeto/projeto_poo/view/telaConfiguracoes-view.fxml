<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800" prefWidth="600" spacing="20" style="-fx-background-color: #191919; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projeto.projeto_poo.view.ConfiguracaoViewController">
   <VBox prefHeight="50.0" prefWidth="10.0" />
   <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
      <children>
      
          <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="0.0" prefWidth="300.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #00b894;" text="Configurações do Jogo" />
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="400.0">
      <children>
      
                <!-- Configuração: Número de questões por jogo -->
          <Label contentDisplay="CENTER" prefHeight="35.0" prefWidth="242.0" style="-fx-text-fill: white;" text="Número de Questões por Jogo:">
            <font>
               <Font size="15.0" />
            </font>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Label>
          <TextField fx:id="txtQntQuestoes" alignment="CENTER_RIGHT" prefHeight="32.0" prefWidth="70.0" style="-fx-font-size: 16px;" />
      </children>
   </HBox>
   <Pane prefHeight="50.0" prefWidth="50.0" />

          <!-- Configuração: Tempo para responder questões -->
    <Label style="-fx-font-size: 20px; -fx-text-fill: #00b894;" text="Tempo para Responder (segundos):" />
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
         <HBox prefHeight="50.0" prefWidth="150.0">
            <children>
            
                      <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Fácil:">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Label>
                <TextField fx:id="txtTempoFacil" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </children>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="150.0">
            <children>
            
                                                    <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Difícil:">
                  <font>
                     <Font size="15.0" />
                  </font>
                  <HBox.margin>
                     <Insets right="16.0" />
                  </HBox.margin>
               </Label>
                <TextField fx:id="txtTempoDificil" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </children>
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </HBox>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
         <HBox prefHeight="50.0" prefWidth="150.0">
            <children>
            
                <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Médio:">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
                  <font>
                     <Font size="15.0" />
                  </font>
               </Label>
                <TextField fx:id="txtTempoMedio" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </children>
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </HBox>
         <HBox prefHeight="50.0" prefWidth="150.0">
            <children>
            
                <Label prefHeight="32.0" prefWidth="78.0" style="-fx-text-fill: white;" text="Aleatória:">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Label>
                <TextField fx:id="txtTempoAleatorio" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
                  <font>
                     <Font size="15.0" />
                  </font>
               </TextField>
            </children>
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </HBox>
      </children>
   </HBox>
   <Pane prefHeight="50.0" prefWidth="50.0" />

    <!-- Configuração: Pontuação ao acertar questões -->
    <Label style="-fx-font-size: 20px; -fx-text-fill: #00b894;" text="Pontuação por Dificuldade:" />
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
      
          <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Fácil:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
          <TextField fx:id="txtPontuacaoFacil" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
      
          <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Médio:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
          <TextField fx:id="txtPontuacaoMedio" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
            <font>
               <Font size="15.0" />
            </font>
         </TextField>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
      
          <Label prefHeight="35.0" prefWidth="60.0" style="-fx-text-fill: white;" text="Difícil:">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
          <TextField fx:id="txtPontuacaoDificil" alignment="CENTER" prefHeight="32.0" prefWidth="75.0" style="-fx-font-size: 16px;">
            <font>
               <Font size="15.0" />
            </font>
         </TextField>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0">
      <children>
      
                <!-- Botões -->
          <Button fx:id="btnSalvar" onAction="#salvarConfiguracoes" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-size: 16px;" text="Salvar Configurações" >
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </Button>
      
                <Button onAction="#voltarMenu" style="-fx-background-color: #555; -fx-text-fill: white; -fx-font-size: 16px;" text="Voltar ao Menu" >
            <HBox.margin>
               <Insets left="10.0" right="10.0" />
            </HBox.margin>
         </Button>
      
          <!-- Novo Botão: Adicionar Questão -->
          <Button fx:id="btnAdicionarQuestao" onAction="#adicionarQuestao" style="-fx-background-color: #ffcc00; -fx-text-fill: black; -fx-font-size: 16px;" text="Adicionar Questão" >
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>

</VBox>
